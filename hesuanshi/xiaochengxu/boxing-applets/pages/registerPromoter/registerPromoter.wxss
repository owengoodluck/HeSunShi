page {
  padding-bottom: 50rpx;
  background: #f5f5f5;
}

.title {
  width: 100%;
  height: 340rpx;
}

.titleText {
  padding: 20rpx;
  height: 60rpx;
  font-size: 14px;
  color: #333;
  line-height: 60rpx;
  display: flex;
  align-items: center; /*垂直*/
}

.border {
  margin: 0 20rpx;
  background: #fff;
  border-radius: 8rpx;
}

.textarea {
  margin: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  height: 264rpx;
  width: 670rpx;
  padding: 20rpx;
  font-size: 14px;
  color: #333;
}

.btn {
  width: 710rpx;
  height: 100rpx;
  border-radius: 76px;
  display: flex;
  align-items: center; /*垂直*/
  justify-content: center; /*水平*/
  color: #fff;
  font-size: 16px;
  background: #e70010;
  margin-top: 88rpx;
}

.placeholder {
  color: #999;
}

button::after {
  border: none;
}
