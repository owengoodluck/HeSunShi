page {
  background: #f5f5f5;
  padding-bottom: 50rpx;
}

.titleView {
  padding: 32rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.14);
  background: #fff;
}

.title-text {
  display: flex;
  justify-content: center;
  height: 20px;
  font-size: 14px;
  color: rgba(136, 136, 136, 1);
  line-height: 20px;
}

.title-money {
  display: flex;
  justify-content: center;
  height: 56px;
  font-size: 40px;
  color: rgba(231, 0, 16, 1);
  line-height: 56px;
}

.title-pending {
  display: flex;
  justify-content: center;
  height: 17px;
  font-size: 12px;
  color: rgba(136, 136, 136, 1);
  line-height: 17px;
}

.yesterdayView {
  padding: 42rpx 0 26rpx 0;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.yesterday-number {
  height: 28px;
  font-size: 20px;
  color: rgba(51, 51, 51, 1);
  line-height: 28px;
}

.tixianView {
  background: #fff;
  padding: 0 20rpx;
}

.tixianView_left {
  float: left;
  display: flex;
  align-items: center;
  height: 94rpx;
  line-height: 94rpx;
}

.tixianView_text {
  font-size: 14px;
  color: rgba(51, 51, 51, 1);
}

.tixianView_right {
  float: right;
  display: flex;
  align-items: center;
  height: 94rpx;
  line-height: 94rpx;
}

.tixianView_right_icon {
  width: 12rpx;
  height: 26rpx;
  margin-left: 32rpx;
}

.totalView {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  padding: 28rpx 0;
}

.totalItem {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.totalNum {
  height: 33px;
  font-size: 24px;
  color: rgba(231, 0, 16, 1);
  line-height: 33px;
}

.totalText {
  margin-top: 8rpx;
  height: 20px;
  font-size: 14px;
  color: rgba(51, 51, 51, 1);
  line-height: 20px;
}

.bottom-btn {
  position: fixed;
  bottom: 0;
  height: 98rpx;
  display: flex;
}

.btn {
  height: 98rpx;
  line-height: 98rpx;
  border-radius: 0px;
  font-size: 15px;
  color: rgba(255, 255, 255, 1);
}

button::after {
  border: none;
}

.home {
  width: 136rpx;
  height: 136rpx;
  position: fixed;
  bottom: 150rpx;
  right: 20rpx;
}