page {
  background-color: #F9F9F9;
  padding-bottom: 60rpx;
}

.price {
  background-color: #fff;
  height: 232rpx;
  text-align: center;
}

.total_price {
  padding-top: 54rpx;
  font-size:30px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(231,0,16,1);
}

.piece_price {
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(136,136,136,1);
}

.main_prompt {
  padding-top: 34rpx;
  font-size:16px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(231,0,16,1);
}

.subtitle_prompt {
  margin-top: 30rpx;
  padding: 0 20rpx;
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(136,136,136,1);
}

.user_service {
  margin: 28rpx 20rpx 28rpx 20rpx;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.home_title {
  margin-bottom: 18rpx;
}

.name_block {
  padding-left: 28rpx;
  height: 108rpx;
  line-height: 108rpx;
  box-shadow:0px 0px 4px 0px rgba(0,0,0,0.1);
  border-radius:8px;
  margin-bottom: 24rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.service_detail {
  height: 110rpx;
  line-height: 110rpx;
  box-shadow:0px 0px 4px 0px rgba(0,0,0,0.1);
  border-radius:8px;
  margin-bottom: 24rpx;
  background-color: #fff;
}

.service_detail_left {
  float: left;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.service_text {
  margin-left: 52rpx;
}

.service_detail_right {
  float: right;
  margin-right: 20rpx;
}

.service_left_icon {
  width: 88rpx;
  height: 88rpx;
}

.service_right_icon {
  width: 12rpx;
  height: 26rpx;
}

.size {
  margin: 28rpx 20rpx 92rpx 20rpx;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.size_content {
  margin-top: 18rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 4px 0px rgba(0,0,0,0.1);
  border-radius:8px;
  padding-left: 28rpx;
  padding-right: 28rpx;
}

.size_block {
  height: 108rpx;
  line-height: 108rpx;
  border-bottom: 1rpx solid #F1F1F1;
  display: flex;
  align-items: center;
}

.size_block_bottom {
  height: 108rpx;
  line-height: 108rpx;
}

.size_block_bottom_left {
  float: left;
  display: flex;
}

.size_block_bottom_right {
  float: right;
}

.size_block_bottom_text {
  margin-left:28rpx;
}

.one_result {
  margin-left:20rpx;
  margin-right:20rpx;
  padding-bottom: 100rpx;
}

.button {
  height:98rpx;
  line-height: 98rpx;
  background:rgba(231,0,16,1);
  border-radius:30px;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.button::after {
  border: 0;
}

.two_result {
  position: fixed;
  bottom: 0;
  height: 98rpx;
  display: flex;
}

.save_button {
  height:98rpx;
  line-height: 98rpx;
  background:#FF8130;
  border-radius:0px;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.order_button {
  height:98rpx;
  line-height: 98rpx;
  background:rgba(231,0,16,1);
  border-radius:0px;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.save_button::after {
  border: 0;
}

.order_button::after {
  border: 0;
}

.placeholder {
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(136,136,136,1);
}