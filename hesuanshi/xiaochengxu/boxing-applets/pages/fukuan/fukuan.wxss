page {
  padding-bottom: 150rpx;
}

.border {
  box-shadow: 0px 0px 16rpx 0px rgba(71, 65, 67, 0.12);
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 0 20rpx;
}

.placeholder {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #888;
}

.subBtn {
  width: 220rpx;
  height: 102rpx;
  border-radius: 0;
  background: #e70010;
  color: #fff;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

button::after {
  border: none;
  border-radius: 0;
}
