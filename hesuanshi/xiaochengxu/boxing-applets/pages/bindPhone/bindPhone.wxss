page {
  background: white;
  display: flex;
  justify-content: center;
}

.border {
  width: 600rpx;
  height: 668rpx;
  margin-top: 102rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.14);
  border-radius: 16rpx;
  padding-bottom: 30rpx;
}

.active {
  border-bottom: 2px solid #e70010;
  color: #e70010;
}

.active1 {
  border-bottom: 2px solid #eee;
  color: #888;
}

.img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}

.img1 {
  width: 28rpx;
  height: 28rpx;
  border-radius: 4rpx;
}

.input {
  height: 28px;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
  line-height: 20px;
}

.add_btn {
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.subButton {
  height: 80rpx;
  background: #e70010;
  border-radius: 25px;
  font-size: 14px;
  color: #fff;
  line-height: 80rpx;
}

button::after {
  border: none;
}
