@import '/assets/fonts/iconfont.wxss';
.user_service {
  margin: 28rpx 20rpx 28rpx 20rpx;
  font-size: 15px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.home_title {
  margin-bottom: 18rpx;
}

.service_detail {
  height: 110rpx;
  line-height: 110rpx;
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  margin-bottom: 24rpx;
}

.service_detail_left {
  float: left;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.service_text {
  margin-left: 32rpx;
  font-size: 24rpx;
  color: #aaaaaa;
}
.service_text_2{
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 20rpx;
}
.service_text_3{
  font-size: 24rpx;
}
.service_text_3 image{
  margin-left: 20rpx;
}
.service_detail_right {
  float: right;
  margin-right: 20rpx;
}

.service_left_icon {
  width: 88rpx;
  height: 88rpx;
}

.service_right_icon {
  width: 12rpx;
  height: 26rpx;
}

.size {
  margin: 28rpx 20rpx 92rpx 20rpx;
  font-size: 15px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.size_content {
  margin-top: 18rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.size_block {
  height: 108rpx;
  line-height: 108rpx;
  border-bottom: 1rpx solid #f1f1f1;
  display: flex;
  align-items: center;
}

.size_block_bottom {
  height: 108rpx;
  line-height: 108rpx;
}

.size_block_bottom_left {
  float: left;
  display: flex;
}

.size_block_bottom_right {
  float: right;
}

.size_block_bottom_text {
  margin-left: 28rpx;
}

.result {
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-bottom: 100rpx;
}

.button {
  height: 98rpx;
  line-height: 98rpx;
  background: rgba(231, 0, 16, 1);
  border-radius: 30px;
  font-size: 15px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.button::after {
  border: 0;
}

.placeholder {
  font-size: 15px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
}

.contact {
  width: 136rpx;
  height: 136rpx;
  position: fixed;
  bottom: 250rpx;
  right: 20rpx;
}

.home-swiper {
  height: 500rpx;
}

.home-swiper-item {
  height: 500rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.demo-text-1 {
  background-color: green;
  height: 100%;
}

.demo-text-2 {
  background-color: red;
  height: 100%;
}

.demo-text-3 {
  background-color: blue;
  height: 100%;
}

.flex-wrp {
  display: flex;
}

.home-tab {
  background:#373531;
  width: 128rpx;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
  color: #faf8f6;
}
.home-tab-more{
  background:#8a8a87; 
}
.home-tab-active {
  background-color: red;
}
.icon-gengduo{
  font-size: 100rpx;
}
.home-swiper-item-image {
  width: 100%;
  height: 100%;
}
