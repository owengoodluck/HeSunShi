@import '/assets/fonts/iconfont.wxss';
.layout_image {
  margin: 38rpx 50px 28rpx 50px;
}

.layout_name {
  font-size:17px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: center;
}

.price {
  background-color: #fff;
  height: 232rpx;
  text-align: center;
}

.total_price {
  padding-top: 54rpx;
  font-size:30px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(231,0,16,1);
}

.piece_price {
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(136,136,136,1);
}

.main_prompt {
  padding-top: 34rpx;
  font-size:16px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(231,0,16,1);
}

.subtitle_prompt {
  margin-top: 30rpx;
  padding: 0 20rpx;
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(136,136,136,1);
}

.content {
  margin:20rpx;
  padding-bottom: 20rpx;
  border: 1rpx solid #E2E0E0;
  border-radius:10rpx;
}

.block {
  margin: 0 20rpx;
  height: 108rpx;
  line-height: 108rpx;
  border-bottom: 1rpx solid #E2E0E0;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  display: flex;
  align-items: center;
}

.block_title {
  color:rgba(136,136,136,1);
  margin-left: 20rpx;
}

.block_content {
  color:rgba(51,51,51,1);
  margin-left: 20rpx;
}

.one_result {
  margin-top: 60rpx;
  margin-left:20rpx;
  margin-right:20rpx;
}

.button {
  height:98rpx;
  line-height: 98rpx;
  background:rgba(231,0,16,1);
  border-radius:30px;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.button::after {
  border: 0;
}

.two_result {
  position: fixed;
  bottom: 0;
  height: 98rpx;
  display: flex;
}

.save_button {
  height:98rpx;
  line-height: 98rpx;
  background:#FF8130;
  border-radius:0px;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.order_button {
  height:98rpx;
  line-height: 98rpx;
  background:rgba(231,0,16,1);
  border-radius:0px;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.save_button::after {
  border: 0;
}

.order_button::after {
  border: 0;
}

.placeholder {
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(136,136,136,1);
}
.additional{
  color: red;
  text-align: center;
  justify-content:center;
}
.block_additional{
  color: red;
  text-align: center;
}
.delivery-time{
  color: red;
}
.flex-item{
  width: 50%;
}
.tab{
  text-align: left;
}
.tab-value{
  text-align: right;
}
.context-text{
  font-size: 24rpx;
  margin-bottom: 100px;
}
.text-money{
  color: red;
  font-size: 36rpx;
}
.share-button{
  background-color: red;
  border:1rpx  solid red;
  border-radius: 30rpx 0 0 30rpx;
}
.button-text{
  font-size: 20rpx;
}
.section{
  margin: 20rpx;
}
.home-swiper {
  height: 500rpx;
}

.home-swiper-item {
  height: 500rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.home-swiper-item-image {
  width: 100%;
  height: 100%;
}